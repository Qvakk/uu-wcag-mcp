# ================================================
# WCAG MCP Server - Environment Configuration
# ================================================
# Copy this file to .env and customize as needed.
# For Docker deployment, these are set in docker-compose.yml
# For Azure Function Apps, configure in Application Settings

# === Transport Mode ===
# Options: 'stdio' (VS Code extension) or 'http' (HTTP/SSE)
MCP_TRANSPORT=http
MCP_PORT=3000

# === Logging ===
# Options: error, warn, info, debug
LOG_LEVEL=info

# === Crawling Settings ===
MAX_DEPTH=3
MAX_PAGES=50
CRAWL_DELAY=1000

# === pa11y Configuration ===
# Request timeout in milliseconds
TIMEOUT=60000

# WCAG Standard: WCAG2A, WCAG2AA (Norwegian law), WCAG2AAA
WCAG_STANDARD=WCAG2AA

# Run browser in headless mode
HEADLESS=true

# Custom user agent
USER_AGENT=WCAG-Analyzer/1.0 (pa11y)

# === SPA/i18n Support ===
# Wait time for JavaScript/translations to load (milliseconds)
# Increase for complex SPAs with i18n
PA11Y_WAIT=8000

# Page load event to wait for
# Options: load, domcontentloaded, networkidle0, networkidle2
PA11Y_WAIT_UNTIL=networkidle0

# === Viewport ===
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# === Report Defaults ===
# Default format: markdown or excel
DEFAULT_FORMAT=markdown

# Default language: no (Norwegian) or en (English)
DEFAULT_LANGUAGE=no

# === Localhost Testing ===
# Allow testing local development servers
ALLOW_LOCALHOST=true

# === Puppeteer/Chrome (Docker only) ===
# Path to Chrome executable (set automatically in Docker)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable